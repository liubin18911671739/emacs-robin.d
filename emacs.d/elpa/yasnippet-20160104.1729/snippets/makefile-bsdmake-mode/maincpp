# -*- coding: utf-8; mode: snippet -*-
# name: makefile for XLib
# key: maincpp
# expand-env: ((yas-indent-line 'fixed) (indent-tabs-mode t))
# contributor: Chen Bin <chenbin DOT sh AT gmail>
# --
.PHONY = all clean
TARGET = ${1:main}
SOURCES = $(wildcard *.cpp)
OPT = -O2 -Wall
CC = g++
CFLAGS = $(OPT) -lm
all: $(SOURCES)
	$(CC) -o $(TARGET) $^ $(CFLAGS)
clean:
	rm -rf *.o $(TARGET)